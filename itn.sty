\usepackage[table]{xcolor}
\newenvironment{itntable}[2][\footnotesize]{% \footnotesize is 9pt, the minimum size as of 2021
  \begin{center}
    #1 % Set the right size (and font maybe)
    \newcommand{\ra}{\raggedright\arraybackslash}
